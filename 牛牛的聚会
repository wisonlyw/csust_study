#include <iostream>
#include <queue>
#include <vector>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> a(n);
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    
    vector<int> indeg(n, 0);
    for (int i = 0; i < n; i++) {
        indeg[a[i]]++;
    }
    
    queue<int> q;
    for (int i = 0; i < n; i++) {
        if (indeg[i] == 0) {
            q.push(i);
        }
    }
    
    int ans = 0;
    while (!q.empty()) {
        int u = q.front();
        q.pop();
        ans++;
        int v = a[u];
        indeg[v]--;
        if (indeg[v] == 0) {
            q.push(v);
        }
    }
    
    for (int i = 0; i < n; i++) {
        if (indeg[i] > 0) {
            int count = 0;
            int cur = i;
            do {
                count++;
                indeg[cur] = 0;
                cur = a[cur];
            } while (cur != i);
            if (count == 1) {
                ans++;
            } else {
                ans += count - 1;
            }
        }
    }
    
    cout << ans << endl;
    return 0;
}
