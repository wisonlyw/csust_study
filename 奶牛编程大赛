#include<bits/stdc++.h>

using namespace std;

int main(){
	int t;
	cin >> t;
	while (t--){
		long long n , k;
		cin >> n >> k;
		vector<long long>cowForces(n,0);
		for (int i = 0 ; i < n ; i++){
			cin >> cowForces[i];
		}
		long long force_k = cowForces[k-1];
		long long big_cow = -1;
		for (int i = 0 ; i < n ; i++){
			if (cowForces[i] > force_k){
				big_cow = i;
				break;
			}
		}
		if (big_cow == -1){
			cout << n - 1 << endl;
			continue;
		}
		if (big_cow < k-1){
			int tp = big_cow+1;
			while (cowForces[tp] < force_k){
				tp++;
			}
			cout<<max(tp-big_cow-(big_cow == 0),big_cow-1)<<endl;
		}else{
			cout << big_cow - 1 << endl;
		}
	}
	return 0;
}

